<h2 class="mt-4">Find & Book your Tennis Court</h2>

<%= form_tag "/bookings/search", method: :get do %>
  <div class="d-flex mb-4">
    <%= label_tag "query", "Date:", class: 'input-group-text' %>
    <%= date_field_tag :date,
            params[:date],
            class: "form-control"
            %>
    <%= label_tag "query", "Start time:", class: 'input-group-text' %>
    <%= select_tag(:start_time,
            options_for_select((8..20).to_a.map { |e| "#{e}h" }),
            { :class => 'form-control' })
            %>
    <%= button_tag(type: "submit", class: "btn btn-primary") do %>
      <i class="fas fa-search"></i>
    <% end %>
  </div>
<% end %>

