<h2 class="ml-3 mt-3">Search results for <%= @date %></h2>
<div class="main-container ml-3">
  <div class="search-cards">
    <% @tennis_courts.each do |tennis_court| %>
      <div class="card mb-3">
        <div class="row no-gutters">
          <div class="col-md-4">
            <%= cl_image_tag tennis_court[:photo], crop: :fill, class: "card-img rounded-left", style: "height: 100%;" %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h4 class="card-title"><strong><%= tennis_court[:name] %></strong></h4>
              <p class="card-text"><%= tennis_court[:address] %></p>
              <p class="card-text">Available slots:</p>
              <div class="d-inline-flex flex-wrap">
                <% @slots.each do |slot| %>
                  <% if tennis_court[:bookings].include? (slot[:time]) %>
                    <div class="mini-slot gray rounded">
                      <%= slot[:time] %>h
                    </div>
                  <% else %>
                    <%= link_to tennis_court_bookings_confirm_path(tennis_court[:id],
                                                                   :booking => { :start_time => slot[:time], :date => @date }) do %>
                      <div class="mini-slot green rounded">
                        <%= slot[:time] %>h
                      </div>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div id="map"
       class="mr-3"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
